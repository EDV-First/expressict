extends ../base.pug

block title
    title Site administrator | Người dùng
    link(rel="stylesheet", href="/static/admin/css/users/users1.css")

block content-left
    //- .p-5.m-5
    
block content
    form(action="", method="post")
        .container-fluid
            .row
                .col-lg-7
                    .row
                        .col.m-1.bg-theme
                            include ../includes/breadcrumb.pug
                .col-lg-5
                    .row.h-100
                        .col.m-1.bg-theme.d-flex.flex-row.bd-highlight.align-items-center.justify-content-center
                            input#search.h-50.w-100.text-white.bd-highlight.m-3(type="text", placeholder='Tìm kiếm')

            .row
                .col-lg-3
                    .row.h-100
                        .col.m-1.d-flex.flex-row.bd-highlight.align-items-center.justify-content-center
                            .bd-highlight.text-white.p-2#title Người dùng
                            
                .col-lg-9
                    .row.h-100
                        .col.m-1.d-flex.flex-row.bd-highlight.align-items-center.p-0
                            a.bg-theme.bd-highlight.text-white.p-3.mr-1(href="/admin/users/create" data-toggle="tooltip" data-placement="bottom" title="Thêm người dùng")
