                                    path(d='M1 5v-.5a.5.5 0 0 1 1 0V5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1zm0 3v-.5a.5.5 0 0 1 1 0V8h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1zm0 3v-.5a.5.5 0 0 1 1 0v.5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1z')
                            a.bg-theme.bd-highlight.text-white.p-3.ml-1.mr-1(href="/admin/staffs/title" data-toggle="tooltip" data-placement="bottom" title="Xếp hạng danh hiệu")
                                svg.bi.bi-bookmark(xmlns='http://www.w3.org/2000/svg', width='1.5em', height='1.5em', fill='currentColor', viewbox='0 0 16 16')
                                    path(d='M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.777.416L8 13.101l-5.223 2.815A.5.5 0 0 1 2 15.5V2zm2-1a1 1 0 0 0-1 1v12.566l4.723-2.482a.5.5 0 0 1 .554 0L13 14.566V2a1 1 0 0 0-1-1H4z')
                            a.bg-theme.bd-highlight.text-white.p-3.ml-1.mr-1(href="/admin/staffs/ranking" data-toggle="tooltip" data-placement="bottom" title="Xếp hạng thành tích")
                                svg.bi.bi-bar-chart(xmlns='http://www.w3.org/2000/svg', width='1.5em', height='1.5em', fill='currentColor', viewbox='0 0 16 16')
                                    path(d='M4 11H2v3h2v-3zm5-4H7v7h2V7zm5-5v12h-2V2h2zm-2-1a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h2a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1h-2zM6 7a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v7a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V7zm-5 4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1v-3z')
            .row
                .col-lg-11
                    .row
                        .col.m-1.bg-theme
                            section
                                table.table.table-borderless.text-white
                                    thead
                                        tr
                                            th(scope='col') 
                                                .custom-control.custom-checkbox.pb-2
                                                    input#customControlAutosizing.custom-control-input(type='checkbox')
                                                    label.custom-control-label(for='customControlAutosizing')
                                            th(scope='col')
                                                h5.font-weight-normal Tên đăng nhập
                                            th(scope='col')
                                                h5.font-weight-normal Tên
                                            th(scope='col')
                                                h5.font-weight-normal Họ
                                            th(scope='col')
                                                h5.font-weight-normal Email
                                            th(scope='col')
                                                h5.font-weight-normal Số điện thoại
                                    tbody#content-user
                                        each user in users
                                            tr
                                                th(scope='row') 
                                                    .custom-control.custom-checkbox.mb-1
                                                        input.custom-control-input(type='checkbox', id = user._id, name = user._id)
                                                        label.custom-control-label(for= user._id)
                                                    
                                                td 
                                                    a(href="/admin/users/" + user._id).text-white=user.username
                                                td= user.firstname
                                                td= user.lastname
                                                td= user.email
                                                td= user.phone
                .col-lg-1
                    .row.h-100
                        .col.m-1.bg-theme
                            input(type="submit", value="Xóa").mt-2.btn.btn-primary 


    

