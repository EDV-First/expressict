extends ../base.pug

block title
    title Site administrator | View
    link(rel="stylesheet", href="/static/admin/css/users/user.view.css")

block content-left
    .p-5.m-5
    
block content
    include ../includes/breadcrumb.pug
    if err
        p.text-danger= err

    form(action="" method="post")
        .form-row
            .form-group.col-md-2
                label(for="username") Tên đăng nhập :
            .form-group.col-md-10
                input#username.pl-2(
                    type="text" 
                    name="username"
                    value= values ? values.username : staff.username
                )
                input(
                    type="hidden"
                    name="_id" 
                    value=staff._id
                )
        .form-row
            .form-group.col-md-2
                label(for="password") Password :
            .form-group.col-md-10
                p= staff.password 
        .form-row
            .form-group.col-md-2
                label(for="fullname") Họ và tên :
            .form-group.col-md-10
                input#fullname.pl-2(
                    type="text"
                    name="fullname"
                    value= values ? values.fullname : staff.fullname
                )                 
        .form-row
            .form-group.col-md-2
                label(for="phone") Số điện thoại :
            .form-group.col-md-10
                input#phone.pl-2(
                    type="text" 
                    name="phone" 
                    maxlength=10 
                    value= values ? values.phone : staff.phone
                )
        .form-row
            .form-group.col-md-2
                label(for="email") Email :
            .form-group.col-md-10
                input#email.pl-2(
                    type="email"
                    name="email"
                    value= values ? values.email : staff.email
                )
        .form-row
            .form-group.col-md-2
                label(for="") Giới tính :
            .form-group.col-md-10
                .custom-control.custom-radio
                    input.custom-control-input(
                        type='radio'
                        id="male"
                        name="gender"
                        value="male" 
                        checked=staff.gender=="male" ? true : false
                    )
                    label.custom-control-label(for= "male") Nam
                .custom-control.custom-radio
                    input.custom-control-input(
                        type='radio'
                        id="female"
                        name="gender"
                        value="female" 
                        checked=staff.gender=="female" ? true : false
                    )
                    label.custom-control-label(for= "female") Nữ
        .form-row
            .form-group.col-md-2
                label(for="date") Ngày sinh :
            .form-group.col-md-10
                input#date.pl-2(type="date" name="dayofbirth" value= staff.dayofbirth)

        hr.bg-secondary

        .form-row
            .form-group.col-md-2
                label(for="scores") Điểm số :
            .form-group.col-md-10
                input#scores.pl-2(type="number" name="scores" value= staff.scores)
        .form-row
            .form-group.col-md-2
                label(for="ranking") Xếp hạng :
            .form-group.col-md-10
                .custom-control.custom-radio
                    input.custom-control-input(
                        type='radio' 
                        id="diamond" 
                        name="ranking" 
                        value="diamond" 
                        checked= staff.ranking=="diamond" ? true : false
                    )
